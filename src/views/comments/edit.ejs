<%- include('../partials/header') %>
<div class="container col-lg-8 ">
    <div class="card">
        <h5 class="card-header">
            댓글 수정하기
        </h5>
        <div class="card-body">
            <form action="/posts/<%= post._id  %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea name="text" id="desc" class="form-control" style="border:none;"><%=comment.text %></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-3">업데이트</button>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>
