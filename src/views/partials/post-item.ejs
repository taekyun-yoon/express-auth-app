                    <a href="/posts/<%=post._id  %>/edit" class="dropdown-item" style="font-size: smaller;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                        </svg>
                        <button type="submit" class="no-outline">Edit Post</button>
                    </a>
                    <hr class="dropdown-divider">
                    <form class="dropdown-item" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                        </svg>
                        <button type="submit" class="no-outline" style="font-size: smaller;">Move to Trash</button>
                    </form>
                </div>
            </div>
            <% } %>
        </div>

        <p class="card-text mt-2">
            <%= post.description %>
        </p>

        <% if(post.image) {%>
        <img class="w-100" src="http://localhost:3000/assets/images/<%= post.image %>" />
        <% } %>

        <hr class="mb-1">
        <div class="d-flex justify-content-between ">
            <div class="row">
                <button id="like-button-<%=post._id%>" class="no-outline" type="button" data-post-id="<%=post._id%>">
                    <% if (post.likes.find(event => event === currentUser._id.toString())) { %>
                        <img src="/assets/images/like-1.png" height="20px">
                    <% } else { %>
                        <img src="/assets/images/like.png" height="20px">
                    <% } %>
                    <span class="ms-1" id="like-count-<%=post._id%>"><%=post.likes.length %></span>
                </button>
            </div>
        
            <a class="ms-auto pe-2" data-bs-toggle="collapse" href="#post<%=post._id %>">
                댓글 <%=post.comments.length %>
            </a>
        </div>
        <hr class="mt-1">
        <div class="collapse show" id="post<%=post._id%>">
            <% if (post.comments.length > 0){ %>
            <div class="card-body comment-section">
                <% post.comments.forEach((comment)=>{ %>
                <div class="d-flex justify-content-between">
                    <a href="/profile/<%=post.author.id %>">
                        <div class="font-weight-bold ">
                            <%=comment.author.username %>
                        </div>
                    </a>
                    <small class="text-secondary">
                        <%=comment.createdAt.toDateString() %>
                    </small>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <p>
                        <%=comment.text %>
                    </p>
                    <% if (currentUser && comment.author.id.equals(currentUser._id)) {%>
                        <div class="dropdown">
                            <button class="no-outline" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="/assets/images/ellipsis.png" height="15px">
                            </button>
                            <div class="dropdown-menu" style="min-width: 4rem;">
                                <a href="/posts/<%=post._id%>/comments/<%=comment._id %>/edit" class="dropdown-item" style="font-size: smaller;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                                    </svg>
                                    <button type="submit" class="no-outline">Edit</button>
                                </a>
                                <form class="dropdown-item" action="/posts/<%=post._id%>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                    </svg>
                                    <button type="submit" class="no-outline" style="font-size: smaller;">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }%>
                </div>
                <% }) %>
            </div>
            <% } %>
        </div>
        <div>
            <form method="POST" action="/posts/<%= post._id %>/comments ">
                <div class="form-group">
                    <input name="text" id="desc" class="comment-section" placeholder="댓글을 작성해주세요." required>
                    <p class="small ms-2">엔터를 눌러주세요.</p>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('[id^="like-button-"]').forEach(button => {
            button.addEventListener('click', async function() {
                const postId = this.getAttribute('data-post-id');
                try {
                    const response = await fetch(`/posts/${postId}/like`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
    
                    if (response.ok) {
                        const data = await response.json();
                        if (data.success) {
                            const likeCountElement = document.getElementById(`like-count-${postId}`);
                            likeCountElement.innerText = data.likesCount;
    
                            const likeButtonImage = this.querySelector('img');
                            if (data.liked) {
                                likeButtonImage.src = '/assets/images/like-1.png';
                            } else {
                                likeButtonImage.src = '/assets/images/like.png';
                            }
                        } else {
                            alert('좋아요 업데이트 중 에러가 발생하였습니다.');
                        }
                    } else {
                        alert('서버와의 통신 중 에러가 발생하였습니다.');
                    }
                } catch (error) {
                    console.error('좋아요 업데이트 중 에러가 발생하였습니다.', error);
                    alert('좋아요 업데이트 중 에러가 발생하였습니다.');
                }
            });
        });
    });
    </script>

