<%- include('../partials/header', {currentUser: currentUser})%>
<div class="container">
    <div style="max-width: 600px; margin: 1rem auto;">
        <%- include('../partials/create-post', { currentUser: currentUser})%>
    </div>

    <% posts.forEach((post) => { %>
        <% if (post.author.id.equals(currentUser._id) ||
            currentUser.friends.find(friend => friend === post.author.id.toString())) { %>
            <div style="max-width: 600px; margin: 1rem auto;">
                <%- include('../partials/post-item', { post: post}) %>
            </div>
        <% } %>
    <% }) %>
    
</div>

<%- include('../partials/post-modal', {currentUser: currentUser})%>

<%- include('../partials/footer')%>